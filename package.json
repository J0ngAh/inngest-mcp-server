{
  "name": "inngest-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Inngest workflow management (supports both stdio and HTTP transports)",
  "type": "module",
  "bin": {
    "inngest-mcp-server": "./build/index.js",
    "inngest-mcp-http-server": "./build/http-server.js"
  },
  "files": ["build"],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "start": "node build/index.js",
    "start:http": "node build/http-server.js",
    "prepare": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "inngest": "^3.22.12",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.24",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
